<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Maintenance Recommendation Evaluation Report Form | Property Management System</title>
    <link rel="stylesheet" href="../css/mrer.css">
    <link rel="stylesheet" href="../css/general.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>

<body>
    <div class="container">
        <!-- Sidebar -->
        <%- include("./includes/sidebar") %>

        <!-- Main content -->
        <div class="main-content">
            <div class="fix">
                <h1>Maintenance Recommendation Evaluation Report Form</h1>
                <h2>Item Details</Details></h2>
            </div>

            <div class="form-container">
                <form>

                    <!-- Status Section -->
                    <div class="form-group0">
                        <div class="checkbox-group">
                            <label>Unserviceable/Non-functional<input type="checkbox"></label>
                        </div>
                        <div class="checkbox-group">
                            <label>Functional<input type="checkbox"></label>
                        </div>
                    </div>

                    <!-- Form Fields -->
                    <div class="form-group1">
                        <div class="half-width">
                            <label for="office">Name of Office *</label>
                            <input type="text" id="office" placeholder="Ex. Smart Center" required>
                        </div>
                        <div class="half-width">
                            <label for="quantity">Quantity *</label>
                            <input type="number" id="quantity" placeholder="Ex. 100" required>
                        </div>
                        <div class="half-width">
                            <label for="unit">Unit *</label>
                            <input type="text" id="unit" placeholder="Ex. Unit" required>
                        </div>
                        <div class="half-width">
                            <label for="purpose">Purpose *</label>
                            <select id="purpose" required>
                                <option value="" disabled selected>Select Purpose</option>
                                <option>Disposal</option>
                                <option>Repair</option>
                                <option>Return to stock to stock</option>
                                <!-- Add options here -->
                            </select>
                        </div>
                    </div>

                    <div class="form-group2">
                        <div class="half-width">
                            <label for="propertyNumber">Property No. (if any)</label>
                            <input type="number" id="propertyNumber" placeholder="Ex. 15-04-011">
                        </div>
                        <div class="half-width">
                            <label for="dateAcquired">Date Acquired *</label>
                            <input type="date" id="dateAcquired" required>
                        </div>
                        <div class="half-width">
                            <label for="endUser">Name of End User *</label>
                            <input type="text" id="endUser" placeholder="Ex. John Lloyd Tabuac" required>
                        </div>
                        <div class="half-width">
                            <label for="unitValue">Unit Value *</label>
                            <input type="number" id="unitValue" placeholder="Ex. 1000" required>
                        </div>
                        <div class="half-width">
                            <label for="totalValue">Total Value *</label>
                            <input type="number" id="totalValue" placeholder="Ex. 100,000" required>
                        </div>
                    </div>

                    <!-- Additional Options -->
                    <div class="form-group3">
                        <div class="checkbox-group1">
                            <label>Under warranty<input type="checkbox" id="underwarranty"></label>
                        </div>
                        <div class="checkbox-group2">
                            <label>Other/s<input type="checkbox" id="others"></label>
                            <input type="text" id="otherDetails" placeholder="Specify here..." class="specify-box">
                        </div>
                    </div>

                    <!-- Reasons and Description -->
                    <div class="form-group4">
                        <div class="half-width">
                            <label for="reasons">Reasons:</label>
                            <textarea id="reasons" placeholder="Ex. Irreplaceable Grid"></textarea>
                        </div>
                        <div class="half-width">
                            <label for="description">Description:</label>
                            <select id="description">
                                <option value="" disabled selected>Search Serial ID...</option>
                                <option>SN: 20230715-001-123</option>
                            </select>
                        </div>
                    </div>

                    <div class="form-group5">
                        <div class="full-width">
                            <label for="overall">Overall Findings: Narrative recommendation</label>
                            <textarea id="overall" placeholder="Ex. Damaged"></textarea>
                        </div>
                    </div>

                    <!-- Buttons -->
                    <div class="button-container">
                        <button type="submit" class="btn-primary">Print</button>
                        <button type="button" class="btn-secondary">Save</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</body>

</html>
