<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Account | Property Management System</title>
    <link rel="stylesheet" href="../css/dashboardstyle.css" />
    <link rel="stylesheet" href="../css/general.css" />
    <link rel="stylesheet" href="../css/userstyle.css" />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
  </head>

<body>
  <%- include("./includes/sidebar") %>
    <div class="container">
      <div class="mas-header">
        <h1>User Profile</h1>
      </div>
      <!-- Profile Section -->
      <div class="profile-wrapper">
        <div class="box">
          <h2>User Information</h2>
          <form class="profile-form">
            <!-- Personal Information -->
            <div class="profile-pic-container">
              <input type="file" id="file-input" accept="image/*">
              <img id="profile-pic" src="https://via.placeholder.com/150">
            </div>
            <div class="form-grid">
              <div>
                <label for="first-name">First Name*</label>
                <input type="text" id="first-name" value="<%= data.first_name %>" readonly />
              </div>
              <div>
                <label for="last-name">Last Name*</label>
                <input type="text" id="last-name" value="<%= data.last_name %>" readonly />
              </div>
              <div>
                <label for="contact-no">Contact Number*</label>
                <input type="text" id="contact-no" value="<%= data.phone %>" readonly />
              </div>
            </div>

            <div class="form-actions">
              <button id="change-user-btn" type="button" class="action-btn">
                Change User Information
              </button>
            </div>

            <!-- Email & Password -->
            <h2>Email & Password</h2>
            <div class="form-grid">
              <div>
                <label for="email">Email Address*</label>
                <input type="email" id="email" value="<%= data.email %>" readonly />
              </div>
              <div>
                <label for="password">Password*</label>
                <input
                  type="password"
                  id="password"
                  value="<%= password%>"
                  readonly
                />
              </div>
            </div>

            <!-- Action Buttons -->
            <div class="form-actions">
              <button id="change-email-btn" type="button" class="action-btn">
                Change Email
              </button>
              <button id="change-password-btn" type="button" class="action-btn">
                Change Password
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <!-- Background overlay -->
    <div id="overlay" class="overlay"></div>

    <!-- User Information Modal -->
    <div id="changeUsersModal" class="modal">
      <div class="modal-content">
        <span class="close">&times;</span>
        <h2>Change User Information</h2>
        <form action="/user/changeUser" method="post">
          <label for="new-firstname">First Name</label>
          <input type="text" id="new-firstname" placeholder="Enter First Name" required />

          <label for="new-lastname">Last Name</label>
          <input type="text" id="new-lastname" placeholder="Enter Last Name" required />

          <label for="new-contact">Contact Number</label>
          <input type="text" id="new-contact" placeholder="Enter Number" required />

          <button type="submit">Save</button>
        </form>
      </div>
    </div>

    <!-- Email Change Modal -->
    <div id="changeEmailModal" class="modal">
      <div class="modal-content">
        <span class="close">&times;</span>
        <h2>Change Email</h2>
        <form action="/user/changeEmail" method="post">
          <label for="current-email">Current Email</label>
          <input type="email" id="current-email" value="<%= data.email %>" readonly />

          <label for="new-email">New Email</label>
          <input type="email" id="new-email" placeholder="Enter new email" required />

          <label for="confirm-email">Confirm Email</label>
          <input type="email" id="confirm-email" placeholder="Confirm new email" required />

          <button type="submit">Save</button>
        </form>
      </div>
    </div>

    <!-- Password Change Modal -->
    <div id="changePasswordModal" class="modal">
      <div class="modal-content">
        <span class="close">&times;</span>
        <h2>Change Password</h2>
        <form action="/user/changePassword" method="post">
          <label for="current-password">Current Password</label>
          <input type="password" id="current-password" placeholder="Enter current password" required />

          <label for="new-password">New Password</label>
          <input type="password" id="new-password" placeholder="Enter new password" required />

          <label for="confirm-password">Confirm Password</label>
          <input type="password" id="confirm-password" placeholder="Confirm new password" required />

          <button type="submit">Save</button>
        </form>
      </div>
    </div>

    <script>
      document.addEventListener('DOMContentLoaded', function () {
        const savedPic = localStorage.getItem('profilePic');
        if (savedPic) {
          document.getElementById('profile-pic').src = savedPic;
        }
      });

      document.getElementById('file-input').addEventListener('change', function (event) {
        const file = event.target.files[0];
        if (file) {
          const reader = new FileReader();
          reader.onload = function (e) {
            document.getElementById('profile-pic').src = e.target.result;
            localStorage.setItem('profilePic', e.target.result); // Save to local storage
          };
          reader.readAsDataURL(file);
        }
      });

    </script>

</body>

</html>