<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Account | Property Management System</title>
    <link rel="stylesheet" href="../css/dashboardstyle.css">
    <link rel="stylesheet" href="../css/general.css">
    <link rel="stylesheet" href="../css/userstyle.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>

<body>
    <%- include("./includes/sidebar") %>
    <div class="container">
        <!-- Profile Section -->
        <div class="profile-wrapper">
            <div class="header-bar">
                <h1>User Profile</h1>
            </div>

            <div class="box">
                <h2>Update Information</h2>
                <form class="profile-form">
                    <!-- Personal Information -->
                    <div class="form-grid">
                        <div>
                            <label for="first-name">First Name*</label>
                            <input type="text" id="first-name" value="<%= data.first_name %>" readonly>
                        </div>
                        <div>
                            <label for="last-name">Last Name*</label>
                            <input type="text" id="last-name" value="<%= data.last_name %>" readonly>
                        </div>
                        <div>
                            <label for="contact-no">Contact Number*</label>
                            <input type="text" id="contact-no" value="<%= data.phone %>" readonly>
                        </div>
                    </div>

                    <!-- Email & Password -->
                    <h2>Email & Password</h2>
                    <div class="form-grid">
                        <div>
                            <label for="email">Email Address*</label>
                            <input type="email" id="email" value="<%= data.email %>" readonly>
                        </div>
                        <div>
                            <label for="password">Password*</label>
                            <input type="password" id="password" value="********" readonly>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="form-actions">
                        <button id="change-email-btn" type="button" class="action-btn">Change Email</button>
                        <button id="change-password-btn" type="button" class="action-btn">Change Password</button>
                        <button class="logout-btn" onclick="confirmLogout()">Logout</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Background overlay -->
    <div id="overlay" class="overlay"></div>

    <!-- Modals -->
    <div id="changeEmailModal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <h2>Change Email</h2>
            <form action="/user/changeEmail" method="post">
                <label for="current-email">Current Email</label>
                <input type="email" id="current-email" value="<%= data.email %>" readonly>

                <label for="new-email">New Email</label>
                <input type="email" id="new-email" placeholder="Enter new email" required>

                <label for="confirm-email">Confirm Email</label>
                <input type="email" id="confirm-email" placeholder="Confirm new email" required>

                <button type="submit">Save</button>
            </form>
        </div>
    </div>

    <div id="changePasswordModal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <h2>Change Password</h2>
            <form action="/user/changePassword" method="post">
                <label for="current-password">Current Password</label>
                <input type="password" id="current-password" placeholder="Enter current password" required>

                <label for="new-password">New Password</label>
                <input type="password" id="new-password" placeholder="Enter new password" required>

                <label for="confirm-password">Confirm Password</label>
                <input type="password" id="confirm-password" placeholder="Confirm new password" required>

                <button type="submit">Save</button>
            </form>
        </div>
    </div>

    <script>
        function confirmLogout() {
            const userConfirmed = confirm("Are you sure you want to log out?");
            if (userConfirmed) {
                window.location.href = "/logout";
            }
        }

        // Modal functionality
        document.addEventListener("DOMContentLoaded", function () {
            const changeEmailModal = document.getElementById("changeEmailModal");
            const changePasswordModal = document.getElementById("changePasswordModal");
            const overlay = document.getElementById("overlay");

            const changeEmailBtn = document.getElementById("change-email-btn");
            const changePasswordBtn = document.getElementById("change-password-btn");
            const closeButtons = document.querySelectorAll(".close");

            function openModal(modal) {
                modal.classList.add("active");
                overlay.classList.add("active");
            }

            function closeAllModals() {
                changeEmailModal.classList.remove("active");
                changePasswordModal.classList.remove("active");
                overlay.classList.remove("active");
            }

            changeEmailBtn.onclick = function () {
                openModal(changeEmailModal);
            };

            changePasswordBtn.onclick = function () {
                openModal(changePasswordModal);
            };

            closeButtons.forEach((close) => {
                close.onclick = closeAllModals;
            });

            overlay.onclick = closeAllModals;

            window.addEventListener("keydown", function (e) {
                if (e.key === "Escape") closeAllModals();
            });
        });
    </script>
</body>

</html>
