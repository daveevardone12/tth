      <thead>
        <tr class="ics-table-header-row">
          <th class="ics-table-header">Qty.</th>
          <th class="ics-table-header">Unit</th>
          <th class="ics-table-header">Description</th>
          <th class="ics-table-header">Property No.</th>
          <th class="ics-table-header">Date Acquired</th>
          <th class="ics-table-header">Unit Value</th>
          <th class="ics-table-header">Total Amount</th>
